# Production Environment - Dimension Bridge
# Copy to .env and customize for your environment

DIMENSION_BRIDGE_IMAGE=dimension-bridge:v1.0.0

# Production Step CA
STEP_CA_URL=https://ca.company.internal:9000
STEP_CA_FINGERPRINT=production-ca-fingerprint-here

# Conservative renewal settings for production
CHECK_INTERVAL=21600  # Check every 6 hours
DAYS_BEFORE_RENEWAL=7 # Renew 7 days before expiry
CERT_VALIDITY_DAYS=30

# Production logging
RUST_LOG=info

# Slack notifications for production
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK
