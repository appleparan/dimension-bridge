# Development Environment - Dimension Bridge
# Copy to .env and customize for your development setup

DIMENSION_BRIDGE_IMAGE=dimension-bridge:v1.0.0-dev

# Development Step CA (can be localhost)
STEP_CA_URL=https://localhost:9000
STEP_CA_FINGERPRINT=dev-ca-fingerprint-here

# Faster renewal for development/testing
CHECK_INTERVAL=3600   # Check every hour
DAYS_BEFORE_RENEWAL=2 # Renew 2 days before expiry
CERT_VALIDITY_DAYS=7  # Short-lived certificates

# Verbose logging for development
RUST_LOG=debug

# Optional: Development Slack channel
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/DEV/WEBHOOK
