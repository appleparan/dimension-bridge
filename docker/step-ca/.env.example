# Step CA Configuration
# Copy this file to .env and customize for your environment

#
# Required Configuration
#
STEP_CA_NAME="My Company CA"
STEP_CA_DNS="localhost,ca.company.internal"

#
# Optional Configuration
#
STEP_CA_PORT="9000"
STEP_CA_PROVISIONER_NAME="admin"

# Enable SSH certificate support (uncomment to enable)
#STEP_CA_SSH_SUPPORT="true"

# Password configuration (choose one method)
# Option 1: Use Docker secrets (recommended for production)
#STEP_CA_PASSWORD_FILE="/run/secrets/ca-password"

# Option 2: Direct password (not recommended for production)
#STEP_CA_PASSWORD="your-secure-password-here"

#
# Bootstrap Script Configuration (optional)
#
STEP_CA_URL="https://localhost:9000"
STEP_CA_CONTAINER="step-ca"
